@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-page">
    <div class="auth-card">
        <h2>Forgot Password</h2>
        <p class="auth-subtitle">Enter your email and we'll send you a reset link.</p>

        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="you@email.com" required autocomplete="off" />
            </div>

            <button type="submit" class="btn btn-primary btn-full">Send Reset Link</button>
        </form>

        <p class="auth-footer-text"><a href="@Url.Action("Login", "Account")">Back to Login</a></p>
    </div>
</div>